{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "ES2015",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "paths": {
      "@/*": ["./src/*"],
      "@/modules/*": ["./src/modules/*"],
      "@/shared/*": ["./src/shared/*"],
    }
  },
  "include": ["./src/**/*"]
}